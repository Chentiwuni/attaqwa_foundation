extends layout 

block content
  .row.justify-content-center
    .col-md-8
      h2.text-center Ask Shiisu

      // Display success message
      if success && success.length > 0
        .alert.alert-success= success[0]

      // Display error message
      if error && error.length > 0
        .alert.alert-danger= error[0]

      form(action="/ask_sheesu" method="POST")
        .form-group
          label(for="question") Your Question
          textarea.form-control(name="question" rows="4" required)
        button.btn.btn-primary.mt-3(type="submit") Submit Question
