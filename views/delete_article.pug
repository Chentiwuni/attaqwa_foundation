extends layout

block content
  .container.mt-5
    h1.text-center Delete Article

    form(action="/delete_article" method="POST")
      .form-group
        label(for="articleId") Select an Article to Delete
        select.form-control(name="articleId" required)
          option(value="" disabled selected) -- Select Article --
          each article in articles
            option(value=article._id)= article.title

      button.btn.btn-danger.mt-3(type="submit" onclick="return confirm('Are you sure you want to delete this article?')") Delete Article
