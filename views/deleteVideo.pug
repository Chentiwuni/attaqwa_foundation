extends layout

block content
  .container.mt-5
    h1.text-primary.text-center Videos Under Category

    if videos.length > 0
      .row.justify-content-center
        each video in videos
          .col-md-4.mb-4
            .card.shadow-sm
              iframe.card-img-top(
                src=video.youtubeUrl
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              )
              .card-body
                h5.card-title.text-center= video.title
                form(method="POST", action=`/delete_video/${video._id}` onsubmit="return confirm('Are you sure you want to delete this video?');")
                  button.btn.btn-danger(type="submit") Delete
    else
      .alert.alert-info.text-center No videos found in this category.
